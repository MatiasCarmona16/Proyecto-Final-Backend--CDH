<header>
    <div class="container">
    <nav class="navbar p-5 mt-2">
        <div class="container-navbar">
            <div class="marca-nav">
                <a href="/" class="navbar-brand">iPhone Store</a>
            </div>
            

            <div class="header-a">
            <a href="/" class="btn-dec">Home</a>
            <a href="/productsview" class="btn-dec">iStore</a>
            {{#if userInfo}}
                        <p><a href="/auth/change-rol-user">Profile</a></p>
                        <a id="deslog" href="/api/auth/logout" class="btn-dec">Logout</a>
                        <p>|</p>
                        <a href="/cart"><svg xmlns="http://www.w3.org/2000/svg" height="16" width="12.45" viewBox="0 0 448 512"><path d="M160 112c0-35.3 28.7-64 64-64s64 28.7 64 64v48H160V112zm-48 48H48c-26.5 0-48 21.5-48 48V416c0 53 43 96 96 96H352c53 0 96-43 96-96V208c0-26.5-21.5-48-48-48H336V112C336 50.1 285.9 0 224 0S112 50.1 112 112v48zm24 48a24 24 0 1 1 0 48 24 24 0 1 1 0-48zm152 24a24 24 0 1 1 48 0 24 24 0 1 1 -48 0z"/></svg></svg></a>
                    {{else}}
                        <a href="/auth/login-view" class="btn-dec">Login</a>
                        <a href="/auth/register-view" class="btn-dec">Register</a>
                    {{/if}}
            </div>

        </div>
    </nav>
    </div>
</header>

<div class="container">
    <div class="titulo-comprador">
            <h2>Thank you for your purchase, {{userInfo.first_name}}!</h2>
    </div>
    <hr>

<div class="container-ticket">
<div class="ticket">
    <p class="tipo-factura">Invoice type <strong>B</strong></p>
    <h3>iPhone Store</h3>
    <p>TIN: 987-65-4321</p>
    {{#if ticket}}
        <p><strong>Ticket code:</strong> <br>#{{ticket.code}}</p>
        <p><strong>{{ticket.purchase_datetime}}</strong></p>
        <p>Purchaser: {{ticket.purchaser}}</p>
        <hr>
        <p><strong>Total: $ {{ticket.amount}}.00</strong></p>
        <p>Thank you for choosing us!</p>
        <p class="url-page-p">www.iPhoneStore.com</p>
    {{else}}
    <p>Error in generating the ticket</p>
    {{/if}}
    {{#if error}}
    <p>Error: {{error}}</p>
    {{/if}}
</div>
</div>
<hr>
    <div class="button-atras-a">
        <button><a href="/productsview">Return to iStore</a></button>
    </div>
</div>